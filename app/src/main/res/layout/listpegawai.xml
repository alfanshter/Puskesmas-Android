<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <RelativeLayout
      android:layout_width="match_parent"
      android:padding="10dp"
      android:layout_height="wrap_content">

      <TextView
          android:id="@+id/txtpegawai"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_toLeftOf="@id/lvhapus"
          android:layout_marginRight="10dp"
          android:fontFamily="@font/roboto_medium"
          android:text="Putri Kusuma"
          android:textColor="@color/hijaumentah"
          android:textSize="15dp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/txtalamat"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_toLeftOf="@id/lvhapus"
          android:layout_marginRight="10dp"
          android:layout_below="@id/txtpegawai"
          android:fontFamily="@font/roboto_medium"
          android:text="Putri Kusuma"

          android:textColor="@color/black"
          android:textSize="15dp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/txtusername"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_toLeftOf="@id/lvhapus"
          android:layout_marginRight="10dp"
          android:layout_below="@id/txtalamat"
          android:layout_marginTop="14dp"
          android:fontFamily="@font/roboto_medium"
          android:text="Username : putrikusuma09"
          android:textColor="@color/black"
          android:textSize="15dp" />


      <LinearLayout
          android:layout_width="wrap_content"
          android:id="@+id/lvhapus"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_centerVertical="true"
          android:orientation="vertical">



          <com.google.android.material.button.MaterialButton
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Hapus"
              android:id="@+id/btnhapus"
              android:textAllCaps="false"
              app:cornerRadius="9dp"
              app:backgroundTint="@color/hijaumentah"
              />
      </LinearLayout>

  </RelativeLayout>
</com.google.android.material.card.MaterialCardView>